<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkTime.View.MainPage"
             xmlns:model="clr-namespace:WorkTime.Model"
             xmlns:viewmodel="clr-namespace:WorkTime.ViewModel"
             x:DataType="viewmodel:WorkTimeMainViewModel">
    <Grid
        RowDefinitions="*,Auto,Auto"
        ColumnDefinitions="*,*,*,*,*"
        >
        <CollectionView
            Grid.ColumnSpan="5"
            ItemsSource="{Binding Workentries}"
            SelectionMode="Single"
            SelectionChanged="CollectionView_SelectionChanged">
            <CollectionView.Header
                Margin="20">
                <Grid
                    ColumnDefinitions="80,80,80,85,80"
                    HorizontalOptions="Center">
                    <Label Text="Dátum"/>
                    <Label Text="Kezdés időpontja"
                               Grid.Column="1"/>
                    <Label Text="Vége"
                               Grid.Column="2"/>
                    <Label Text="Munkaidő"
                               Grid.Column="3"/>
                    <Label Text="Megtett táv"
                               Grid.Column="4"/>
                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate
                Grid.ColumnSpan="5">
                <DataTemplate x:DataType="model:WorkTimeEntry">
                    <Grid
                        ColumnDefinitions="80,80,80,85,80"
                        HorizontalOptions="Center" >
                        <Label Text="{Binding Date}"/>
                        <Label Text="{Binding Start}"
                                Grid.Column="1"/>
                        <Label Text="{Binding End}"
                                Grid.Column="2"/>
                        <Label Text="{Binding Time}"
                                Grid.Column="3"/>
                        <Label Text="{Binding Distance}"
                                Grid.Column="4"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button
            Grid.Row="1"
            x:Name="Delete"
            Text="Törlés"
            BackgroundColor="Red"
            Grid.ColumnSpan="2"
            Padding="20"
            IsVisible="False"/>
        <Button
            Grid.Row="1"
            Grid.Column="3"
            x:Name="Modify"
            Text="Módosítás"
            BackgroundColor="Orange"
            Grid.ColumnSpan="2"
            Padding="20"
            IsVisible="False"
            />
        <DatePicker
            Grid.Row="2"
            VerticalOptions="Center"
            HorizontalOptions="Start"
            x:Name="StartDate"
            Date="{Binding Startdate, Mode=TwoWay}"/>
        <Label
            Grid.Row="2"
            Grid.Column="1"
            VerticalOptions="Center"
            HorizontalOptions="Start"
            Text="-tól"/>
        <DatePicker
            Grid.Row="2"
            Grid.Column="2"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            x:Name="EndDate"
            Date="{Binding Enddate, Mode=TwoWay}"/>
        <Label
            Grid.Row="2"
            Grid.Column="3"
            VerticalOptions="Center"
            HorizontalOptions="Start"
            Text="-ig"/>
        <Button
            x:Name="Filter"
            Grid.Row="2"
            Grid.Column="4"
            HorizontalOptions="End"
            WidthRequest="100"
            Text="Szűrés"
            Margin="20"
            Padding="20"
            Command="{Binding GetEntriesCommand}"/>
    </Grid>
</ContentPage>
